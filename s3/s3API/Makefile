CC=g++
DEFINES=-std=c++11
WARNINGS=
DEBUG=-g
INC_DIR=
LIBS=-ls3
CFLAGS=$(DEBUG) $(DEFINES) $(WARNINGS) -c
LDFLAGS=$(DEBUG) $(DEFINES) $(WARNINGS) -o
SOURCES=S3API.cpp S3APITest.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=S3APITest
DEPS=S3API.h

all: $(SOURCES) $(EXECUTABLE)
	
$(EXECUTABLE): $(OBJECTS)
	$(CC) $(LDFLAGS) $@ $^ $(LIBS)

$(OBJECTS): $(SOURCES) $(DEPS)
	$(CC) $(CFLAGS) $^
